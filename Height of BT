//Edge based

int height(struct node * root){
    if(root==NULL){
        return -1;
    }
    int lh=height(root->left);
    int rh=height(root->right);
    
    return (lh>rh?lh:rh)+1;
}

//Node based

int height(struct node * root){
    if(root==NULL){
        return 0;
    }
    int lh=height(root->left);
    int rh=height(root->right);
    
    return (lh>rh?lh:rh)+1;
}
