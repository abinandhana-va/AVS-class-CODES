#include <stdio.h>
int arr[10],max=10,size=0,value,y;
void heapconst(int value);
void swap(int *a,int *b);
void display();
int main()
{
    do{
        printf("Enter your value:");
        scanf("%d",&value);
        heapconst(value);
        printf("More???");
        scanf("%d",&y);
    }while(y==1);
    display();
}

void swap(int *a,int *b){
    int temp=*a;
    *a=*b;
    *b=temp;
}
void heapconst(int value){
    if(size==max){
        printf("Heap is full");
        return;
    }
    arr[size]=value;
    int i=size;
    size++;
    while(i!=0&&arr[i]<arr[(i-1)/2]){
        swap(&arr[i],&arr[(i-1)/2]);
        i=(i-1)/2;
    }
}

void display(){
    printf("Heap:");
    for(int j=0;j<size;j++){
        printf("%d\n",arr[j]);
    }
}

//SUCCESSIVE INSERTION AND SORTING-DELETION(MAX_HEAPIFY)

#include <stdio.h>
int arr[10],sortedarr[10],max=10,size=0,ind=0,value,y;

void heapconst(int value);
void swap(int *a,int *b);
void display(int arr[],int size);
int deleteroot();
void maxheapify(int arr[],int size,int k);
void sortheap(int root);

int main()
{
    do{
        printf("Enter your value:");
        scanf("%d",&value);
        heapconst(value);
        printf("More???");
        scanf("%d",&y);
    }while(y==1);
    printf("Max heap constructed:-\n");
    display(arr,size);
    printf("Sorting by Deletion in heap:-\n");
    while(size>0){
        int root=deleteroot();
        printf("Node deleted %d\n",root);
        sortheap(root);
    }
    display(sortedarr,ind);
}

void swap(int *a,int *b){
    int temp=*a;
    *a=*b;
    *b=temp;
}
void sortheap(int root){
    sortedarr[ind]=root;
    ind++;
}
void heapconst(int value){
    if(size==max){
        printf("Heap is full");
        return;
    }
    arr[size]=value;
    int i=size;
    size++;
    while(i!=0&&arr[i]>arr[(i-1)/2]){
        swap(&arr[i],&arr[(i-1)/2]);
        i=(i-1)/2;
    }
}
int deleteroot(){
    swap(&arr[0],&arr[size-1]);
    int ele=arr[size-1];
    size--;
    maxheapify(arr,size,0);
    return ele;
}

void maxheapify(int arr[],int size,int k){
    int largest=k;
    int rc=2*k+2;
    int lc=2*k+1;
    if(lc<size&&arr[lc]>arr[largest]){
        largest=lc;
    }
    if(rc<size&&arr[rc]>arr[largest]){
        largest=rc;
    }
    if(k!=largest){
        swap(&arr[k],&arr[largest]);
        maxheapify(arr,size,largest);
    }
}

void display(int arr[],int size){

    for(int j=0;j<size;j++){
        printf("%d\n",arr[j]);
    }
}

//SUCCESSIVE INSERTION AND SORTING-DELETION(MIN_HEAPIFY)
#include <stdio.h>
int arr[10],sortedarr[10],max=10,size=0,ind=0,value,y;

void heapconst(int value);
void swap(int *a,int *b);
void display(int arr[],int size);
int deleteroot();
void minheapify(int arr[],int size,int k);
void sortheap(int root);

int main()
{
    do{
        printf("Enter your value:");
        scanf("%d",&value);
        heapconst(value);
        printf("More???");
        scanf("%d",&y);
    }while(y==1);
    printf("Min heap constructed:-\n");

    display(arr,size);
    printf("Sorting by Deletion in heap:-\n");
    while(size>0){
        int root=deleteroot();
        printf("Node deleted %d\n",root);
        sortheap(root);
    }
    display(sortedarr,ind);
}

void swap(int *a,int *b){
    int temp=*a;
    *a=*b;
    *b=temp;
}
void sortheap(int root){
    sortedarr[ind]=root;
    ind++;
}
void heapconst(int value){
    if(size==max){
        printf("Heap is full");
        return;
    }
    arr[size]=value;
    int i=size;
    size++;
    while(i!=0&&arr[i]<arr[(i-1)/2]){
        swap(&arr[i],&arr[(i-1)/2]);
        i=(i-1)/2;
    }
}
int deleteroot(){
    swap(&arr[0],&arr[size-1]);
    int ele=arr[size-1];
    size--;
    minheapify(arr,size,0);
    return ele;
}

void minheapify(int arr[],int size,int k){
    int smallest=k;
    int rc=2*k+2;
    int lc=2*k+1;
    if(lc<size&&arr[lc]<arr[smallest]){
        smallest=lc;
    }
    if(rc<size&&arr[rc]<arr[smallest]){
        smallest=rc;
    }
    if(k!=smallest){
        swap(&arr[k],&arr[smallest]);
        minheapify(arr,size,smallest);

#include <stdio.h>
//Q.To delete a specific node in Cicularily Linkedlist based on value
//Q.To add a node after a speicific value in CLL
void insertatbeg(int value);
void insertafterval(int value,int key);
struct node{
    int data;
    struct node * next;
}
struct node * head=NULL;
struct node * tail=NULL;
int main()
{
    do{
        printf("Enter your value:");
        scanf("%d",&value);
        insertatbeg(value);
        printf("More???");
        scanf("%d",&y);
    }while(y==1);
}

void insertatbeg(int value){
    struct node * NN=(struct node *)malloc(sizeof(struct node ));
    NN->data=value;
    if(head==NULL){
        head=NN;
        head->next=NN;
        tail=NN;
        return;
    }
    NN->next=head;
    tail->next=NN;
    head=NN;
}

void insertafterval(int value,int key){
    struct node * NN=void insertatbeg(int value)
    struct node * temp=head;
    while(temp->data!=key){
        temp=temp->next;
    }  
    if(temp==tail){
        head=NN;
    }
    if(temp->next->next==head){
        tail=NN;
    }
    NN->next=temp->next;
    temp->next=NN;
}

void display(){
    struct node * temp=head;
    while(temp){
        printf("\n%d");
       
    }
}
