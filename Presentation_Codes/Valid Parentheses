//JAVA
//Using ArrayDeque reduced time complextiy from 5ms to 3ms  rather than Stack

class Solution {
    public boolean isValid(String s) {
        ArrayDeque<Character> stk = new ArrayDeque<>();

        for (int i = 0; i < s.length(); i++) {
            char ch = s.charAt(i);

            if (ch == '(' || ch == '{' || ch == '[') {
                stk.push(ch);
            } else {
                if (stk.isEmpty()) return false;

                char top = stk.pop();
                if ((top == '(' && ch != ')') ||
                    (top == '[' && ch != ']') ||
                    (top == '{' && ch != '}')) {
                    return false;
                }
            }
        }
        return stk.isEmpty();
    }
}

//C CODE

bool isValid(char* s) {
    char stack[10000]; 
    int top=-1;  
    int n=strlen(s);
    for(int i=0;i<n;i++)
    {
        char ch=s[i];
        if(ch=='('||ch=='{'||ch=='[')
        {
            top++;
            stack[top]=ch;
        }
        else
        {
            if(top==-1)
            {
                return false;
            }
            else
            {
                ch=stack[top];
                top--;
            }
            if(s[i]==']'&&ch=='['||s[i]=='}'&&ch=='{'||s[i]==')'&&ch=='(')
            {
                continue;
            }
            else
            {
                return false;
            }
        }
    }
    return (top==-1);
}
